{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "allowImportingTsExtensions": true,
        "skipLibCheck": true,
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "types": [
            "node",
            "vite/client"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}